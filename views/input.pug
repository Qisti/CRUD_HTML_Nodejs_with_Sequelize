extends layout

block content
      h1.font-bold.text-center.text-xl.m-4 Add Student
      form.m-4(action='/students/input', method='POST')
        .form-group
          label Student Id
          input#id_student.form-control(name='id_student', required='')
        .form-group
          label Name
          input#name.form-control(type='text', name='name', required)
        .form-group
          label Gender
          .form-check-inline
            input#gender.form-check-input(type='radio', name='gender', value='m')
            | Male
            input#gender.form-check-input(type='radio', name='gender', value='f')
            | Female
        .form-group
          label Date of Birth
          input#date_of_birth.form-control(type='date', name='date_of_birth' required='dateValidation()')
        .form-group
          label Address
          textarea#address.form-control(name='address')
        .form-group
          label Mail
          input#mail.form-control(type='text', name='mail')
          button.bg-blue-dark.text-white.py-2.px-4.mt-4.rounded(class='hover:bg-blue-light', type='submit') Submit
